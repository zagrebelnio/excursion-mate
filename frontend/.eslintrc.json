{
  "root": true,
  "extends": [
    "next",
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": ["react", "react-hooks", "@typescript-eslint"],
  "rules": {
    // Add any specific rules you want to enforce or disable
    "react/react-in-jsx-scope": "off", // In Next.js, React is imported automatically
    "@typescript-eslint/no-unused-vars": "warn", // Warn for unused vars
    "prettier/prettier": ["error", { "endOfLine": "auto" }] // Enforce Prettier formatting
  }
}
